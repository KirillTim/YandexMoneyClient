<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context="im.kirillt.yandexmoneyclient.fragments.auth.CreateLockCodeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center_vertical">

        <TextView
            style="@style/TextViewH2"
            android:text="@string/enter_code" />

        <TextView
            android:id="@+id/fragment_create_lock_code_second_msg"
            android:textColor="@color/text_color_dark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="any message here"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/fragment_create_lock_code_edit_text"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:lines="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/fragment_create_lock_code_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>
        </LinearLayout>

        <TextView
            style="@style/TextViewH3"
            android:text="@string/enter_lock_code_hint"/>

        <TextView
            android:id="@+id/fragment_create_lock_code_reset_button"
            style="@style/TextViewH2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/reset"
            />

    </LinearLayout>



</LinearLayout>
