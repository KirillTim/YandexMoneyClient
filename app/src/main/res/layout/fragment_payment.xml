<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_white"
    tools:context="im.kirillt.yandexmoneyclient.fragments.PaymentFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pay_who_wrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/pay_who"
                android:layout_weight="1">

                <EditText
                    style="@style/EditText"
                    android:textSize="15sp"
                    android:id="@+id/pay_who"
                    android:maxLength="250"
                    android:hint="@string/pay_who"/>

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/pay_who_options_button"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more_vert_grey_700_24dp"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/pay_total_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pay_total">

                <EditText
                    style="@style/AmountEditText"
                    android:id="@+id/pay_total"
                    android:hint="@string/pay_total"
                    android:text="@string/big_decimal_zero"/>

            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pay_to_be_paid_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_to_be_paid">

            <EditText
                style="@style/AmountEditText"
                android:id="@+id/pay_to_be_paid"
                android:hint="@string/big_decimal_zero"
                android:text="@string/big_decimal_zero"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pay_message_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_recipient_message">

            <EditText
                style="@style/EditText"
                android:id="@+id/pay_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</ScrollView>

