<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fragment_main_fab_anchor"
                android:layout_width="match_parent"
                android:background="@color/color_primary"
                android:layout_height="1dp"/>

            <fragment
                android:id="@+id/fragment_history"
                android:name="im.kirillt.yandexmoneyclient.fragments.HistoryFragment"
                class="im.kirillt.yandexmoneyclient.fragments.HistoryFragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:layout="@layout/fragment_history">

            </fragment>
        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_main_fab"
        style="@style/FabStyle"
        app:layout_anchor="@id/fragment_main_fab_anchor"
        app:layout_anchorGravity="bottom|right|end" />


</android.support.design.widget.CoordinatorLayout>


